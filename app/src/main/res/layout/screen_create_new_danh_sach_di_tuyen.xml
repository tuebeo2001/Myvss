<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp">

    <TextView
        android:id="@+id/tvTitleCreateNewRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Danh sách đi tuyến/ Tạo mới"
        android:textColor="#545151"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="4dp"
        android:text="Khách hàng"
        android:textColor="#545151"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleCreateNewRoute" />

    <EditText
        android:id="@+id/edtCustomer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/border_round_color"
        android:drawableEnd="@drawable/ic_down_show_more"
        app:layout_constraintBottom_toBottomOf="@id/tvCustomer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCustomer"
        app:layout_constraintTop_toTopOf="@id/tvCustomer" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:text="Email"
        android:textColor="#545151"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tvCustomer"
        app:layout_constraintStart_toStartOf="@id/tvCustomer"
        app:layout_constraintTop_toBottomOf="@id/tvCustomer" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/border_login"
        app:layout_constraintBottom_toBottomOf="@id/tvEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvEmail"
        app:layout_constraintTop_toTopOf="@id/tvEmail" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:text="Số điện thoại"
        android:textColor="#545151"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tvCustomer"
        app:layout_constraintStart_toStartOf="@id/tvCustomer"
        app:layout_constraintTop_toBottomOf="@id/tvEmail" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/border_login"
        app:layout_constraintBottom_toBottomOf="@id/tvPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/edtCustomer"
        app:layout_constraintTop_toTopOf="@id/tvPhone" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:text="Địa chỉ"
        android:textColor="#545151"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tvCustomer"
        app:layout_constraintStart_toStartOf="@id/tvCustomer"
        app:layout_constraintTop_toBottomOf="@id/tvPhone" />

    <EditText
        android:id="@+id/edtAddress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/border_login"
        android:hint="Địa chỉ..."
        android:padding="4dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tvAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvAddress"
        app:layout_constraintTop_toTopOf="@id/tvAddress" />

    <EditText
        android:id="@+id/edtCity"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/border_login"
        android:drawableEnd="@drawable/ic_down_show_more"
        android:hint="Tỉnh/Thành phố"
        android:paddingHorizontal="2dp"
        android:paddingVertical="0dp"
        android:textSize="8sp"
        android:padding="2dp"
        app:layout_constraintEnd_toStartOf="@+id/edtDistrict"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/edtAddress"
        app:layout_constraintTop_toBottomOf="@id/edtAddress" />

    <EditText
        android:id="@+id/edtWard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border_login"
        android:drawableEnd="@drawable/ic_down_show_more"
        android:hint="Phường"
        android:paddingHorizontal="2dp"
        android:paddingVertical="0dp"
        android:textSize="8sp"
        android:padding="2dp"

        app:layout_constraintEnd_toEndOf="@id/edtAddress"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtDistrict"
        app:layout_constraintTop_toBottomOf="@id/edtAddress" />

    <EditText
        android:id="@+id/edtDistrict"
        android:layout_width="89dp"
        android:padding="2dp"

        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border_login"
        android:drawableEnd="@drawable/ic_down_show_more"
        android:hint="Quận/Huyện"
        android:paddingHorizontal="2dp"
        android:paddingVertical="0dp"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/edtWard"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtCity"
        app:layout_constraintTop_toBottomOf="@id/edtAddress" />

    <EditText
        android:id="@+id/edtNation"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:paddingVertical="5dp"
        android:background="@drawable/border_login"
        android:hint="Quốc gia"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/edtAddress"
        app:layout_constraintStart_toStartOf="@id/edtAddress"
        app:layout_constraintTop_toBottomOf="@id/edtCity" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:text="Thời gian"
        android:textColor="#545151"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tvCustomer"
        app:layout_constraintStart_toStartOf="@id/tvCustomer"
        app:layout_constraintTop_toBottomOf="@id/edtNation" />

    <EditText
        android:id="@+id/edtTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/border_login"
        android:padding="4dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tvTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTime"
        app:layout_constraintTop_toTopOf="@id/tvTime" />

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:text="Ghi chú"
        android:textColor="#545151"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tvCustomer"
        app:layout_constraintStart_toStartOf="@id/tvCustomer"
        app:layout_constraintTop_toBottomOf="@id/tvTime" />

    <EditText
        android:id="@+id/edtNote"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/border_login"
        android:padding="4dp"
        android:textSize="12sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNote"
        app:layout_constraintTop_toTopOf="@id/tvNote" />

</androidx.constraintlayout.widget.ConstraintLayout>